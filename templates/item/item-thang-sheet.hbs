<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Thang Name"/></h1>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="details">Details</a>
  </nav>

  <section class="sheet-body">
    
    <div class="tab" data-group="primary" data-tab="description">
      <div class="form-group">
        <label>Description:</label>
        {{editor content=system.description target="system.description" button=true owner=owner editable=editable}}
      </div>
    </div>

    <div class="tab" data-group="primary" data-tab="details">
      
      <div class="form-group">
        <label>Thang Type:</label>
        <select name="system.thangType">
          {{#each thangTypeOptions}}
          <option value="{{key}}" {{#if selected}}selected{{/if}}>{{label}}</option>
          {{/each}}
        </select>
      </div>

      <div class="form-group">
        <label>Permanent:</label>
        <input name="system.permanent" type="checkbox" {{#if system.permanent}}checked{{/if}}/>
        <small>Can this Thang be lost or destroyed?</small>
      </div>

      <div class="form-group">
        <label>Mechanical Effect:</label>
        <input name="system.mechanical" type="checkbox" {{#if system.mechanical}}checked{{/if}}/>
        <small>Does this Thang provide mechanical bonuses?</small>
      </div>

      {{#if system.mechanical}}
      <div class="mechanical-details">
        
        <div class="form-group">
          <label>Roll Stat:</label>
          <select name="system.rollStat">
            {{#each statOptions}}
            <option value="{{key}}" {{#if selected}}selected{{/if}}>{{label}}</option>
            {{/each}}
          </select>
        </div>

        <div class="form-group">
          <label>Roll Bonus:</label>
          <input name="system.rollBonus" type="number" value="{{system.rollBonus}}" min="-3" max="3"/>
          <small>Bonus/penalty to rolls when using this Thang</small>
        </div>

        <div class="form-group">
          <label>Move Text:</label>
          <textarea name="system.moveText" rows="3" placeholder="Describe how this Thang is used mechanically...">{{system.moveText}}</textarea>
        </div>

      </div>
      {{/if}}

      <div class="form-group">
        <label>Notes:</label>
        <textarea name="system.notes" rows="4" placeholder="Additional notes about this Thang...">{{system.notes}}</textarea>
      </div>

    </div>
  </section>
</form>
