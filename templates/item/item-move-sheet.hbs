<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Move Name"/></h1>
    </div>
  </header>
  
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="details">Details</a>
  </nav>
  
  <section class="sheet-body">
    <div class="tab" data-group="primary" data-tab="description">
      <div class="form-group">
        <label>Description:</label>
        {{editor system.description target="system.description" button=true owner=owner editable=editable}}
      </div>
    </div>
    
    <div class="tab" data-group="primary" data-tab="details">
      <div class="form-group">
        <label>Move Type:</label>
        <select name="system.moveType">
          <option value="basic" {{#eq system.moveType "basic"}}selected{{/eq}}>Basic Move</option>
          <option value="role" {{#eq system.moveType "role"}}selected{{/eq}}>Role Move</option>
          <option value="story" {{#eq system.moveType "story"}}selected{{/eq}}>Story Move</option>
        </select>
      </div>
      
      <div class="form-group">
        <label>Stat:</label>
        <select name="system.stat">
          <option value="might" {{#eq system.stat "might"}}selected{{/eq}}>Might</option>
          <option value="hustle" {{#eq system.stat "hustle"}}selected{{/eq}}>Hustle</option>
          <option value="brains" {{#eq system.stat "brains"}}selected{{/eq}}>Brains</option>
          <option value="smooth" {{#eq system.stat "smooth"}}selected{{/eq}}>Smooth</option>
          <option value="soul" {{#eq system.stat "soul"}}selected{{/eq}}>Soul</option>
        </select>
      </div>
      
      <div class="form-group">
        <label>Move Modifier:</label>
        <div style="display: flex; gap: 10px; align-items: center;">
          <input name="system.modifier" type="text" value="{{system.modifier}}" placeholder="+1" style="width: 60px;"/>
          <input name="system.modifierDescription" type="text" value="{{system.modifierDescription}}" placeholder="when acting cool under pressure" style="flex: 1;"/>
        </div>
        <small>Optional static bonus/penalty for this move</small>
      </div>
      
      <div class="results-section">
        <h3>Results</h3>
        
        <div class="result-group">
          <label>Success ({{#if system.success.value}}{{system.success.value}}{{else}}10{{/if}}+):</label>
          <input name="system.success.value" type="number" value="{{system.success.value}}" min="1" max="12" placeholder="10"/>
          <textarea name="system.success.text" placeholder="What happens on a success...">{{system.success.text}}</textarea>
        </div>
        
        <div class="result-group">
          <label>Partial Success ({{#if system.partial.value}}{{system.partial.value}}{{else}}7{{/if}}-{{#if system.success.value}}{{subtract system.success.value 1}}{{else}}9{{/if}}):</label>
          <input name="system.partial.value" type="number" value="{{system.partial.value}}" min="1" max="12" placeholder="7"/>
          <textarea name="system.partial.text" placeholder="What happens on a partial success...">{{system.partial.text}}</textarea>
        </div>
        
        <div class="result-group">
          <label>Failure ({{#if system.partial.value}}{{subtract system.partial.value 1}}{{else}}6{{/if}} or less):</label>
          <textarea name="system.failure.text" placeholder="What happens on a failure...">{{system.failure.text}}</textarea>
        </div>
      </div>
    </div>
  </section>
</form>
